version: "3"

services:

  stellar-core-telegraf:
    environment:
     - NODE_NAME="{{node.name}}"
    image: kinecosystem/stellar-core-telegraf:latest
    links:
     - "stellar-core:stellar-core"
    restart: on-failure
    logging:
      driver: json-file
      options:
        max-size: 100m
        max-file: "3"

  stellar-core:
    image: kinecosystem/stellar-core:kinecosystem-v1.0.0-stellar-v9.2.0
    container_name: stellar_core
    ports:
      - 11625:11625
      - 11626:11626
    volumes:
      - ./volumes/stellar-core:/opt/stellar-core
    restart: on-failure
    logging:
      driver: json-file
      options:
        max-size: 100m
        max-file: "3"
